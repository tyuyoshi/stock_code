# Stock Code Environment Variables
# Copy this file to .env and update with your actual values

# ========================================
# Application Settings
# ========================================
APP_NAME="Stock Code"
ENVIRONMENT=development
DEBUG=true

# ========================================
# Database Configuration
# ========================================
POSTGRES_USER=stockcode
POSTGRES_PASSWORD=stockcode123
POSTGRES_DB=stockcode
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Connection URL for application
DATABASE_URL=postgresql://stockcode:stockcode123@localhost:5432/stockcode

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# ========================================
# Security
# ========================================
# IMPORTANT: Generate a secure key for production with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Comma-separated list of allowed origins (production only)
# Example: CORS_ORIGINS=https://app.stockcode.com,https://www.stockcode.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Security Headers
SECURITY_HEADERS_ENABLED=true

# ========================================
# GCP Configuration
# ========================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-northeast1
GCP_STORAGE_BUCKET=your-storage-bucket
# GCP_CREDENTIALS_PATH=/path/to/service-account.json

# ========================================
# External API Keys
# ========================================
# EDINET API
EDINET_API_KEY=your-edinet-api-key

# Japan Exchange Group API
JPX_API_KEY=your-jpx-api-key

# Yahoo Finance (usually no key required)
# YAHOO_FINANCE_API_KEY=

# Alpha Vantage (optional)
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# ========================================
# Email Configuration (optional)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@stockcode.com

# ========================================
# Frontend Configuration
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_GA_TRACKING_ID=

# ========================================
# Monitoring (optional)
# ========================================
# Sentry
# SENTRY_DSN=your-sentry-dsn

# ========================================
# pgAdmin Configuration (optional)
# ========================================
PGADMIN_EMAIL=admin@stockcode.com
PGADMIN_PASSWORD=admin123

# ========================================
# Celery Configuration (optional)
# ========================================
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ========================================
# Rate Limiting
# ========================================
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000

# ========================================
# Batch Job Configuration
# ========================================
BATCH_DAILY_UPDATE_TIME="18:00"
BATCH_QUARTERLY_UPDATE_ENABLED=true
BATCH_ERROR_RETRY_COUNT=3
BATCH_ERROR_RETRY_DELAY=300  # seconds

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=100M
LOG_MAX_FILES=10